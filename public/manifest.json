{
    "name": "SpotifyDL",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Click to open panel"
    },
    "permissions": [
        "cookies",
        "activeTab",
        "downloads",
        "storage"
    ],
    "host_permissions": [
        "https://*.spotify.com/*",
        "https://*.scdn.co/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "icons": {
        "16": "16.png",
        "32": "32.png",
        "48": "48.png",
        "128": "128.png",
        "256": "256.png",
        "512": "512.png"
    }
}