{
    "name": "SpotifyDL",
    "version": "1.1.7",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Click to open popup"
    },
    "permissions": [
        "activeTab",
        "downloads",
        "storage"
    ],
    "host_permissions": [
        "https://*.spotify.com/*",
        "https://*.scdn.co/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png",
        "256": "icons/256.png",
        "512": "icons/512.png"
    }
}