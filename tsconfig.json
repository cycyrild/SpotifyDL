{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "@lib/*": [
                "external_node_modules/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}